<idea-plugin>
    <depends>org.jetbrains.kotlin</depends>
    <extensions defaultExtensionNs="org.jetbrains.iren.language">
        <supporter implementation="org.jetbrains.iren.language.KotlinLanguageSupporter"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <renameHandler implementation="org.jetbrains.iren.rename.IRenKotlinVariableInplaceRenameHandler"/>
        <renameHandler implementation="org.jetbrains.iren.rename.IRenKotlinMemberInplaceRenameHandler"/>

        <inspectionToolProvider
                implementation="org.jetbrains.iren.inspections.variable.VariableNamesProvider"/>
    </extensions>
</idea-plugin>